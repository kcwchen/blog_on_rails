<div class="container-fluid mt-3">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-6 col-lg-4">
        <div class="card mb-3">
          <div class="card-body">
            <h3 class="card-title"><%= post.title %></h3>
            <p class="card-text"><%= post.body.truncate(50) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>