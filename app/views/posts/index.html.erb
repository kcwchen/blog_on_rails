<div class="container-fluid mt-3">
  <div class="row">
    <% @posts.each do |post| %>
      <div class="col-md-6 col-lg-4">
        <div class="card mb-3">
          <div class="card-body">
            <h5><%= link_to post.title, post_path(post.id), class: "card-title" %></h5>
            <p class="card-text"><%= post.body.truncate(50) %></p>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>